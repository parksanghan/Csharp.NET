<Window x:Class="_1107_IPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1107_IPC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Grid RenderTransformOrigin="0.491,0.818">
        <Grid.RowDefinitions>
            <RowDefinition Height="197*"/>
            <RowDefinition Height="237*"/>
        </Grid.RowDefinitions>
        <Button Content="서버시작" Click="Button_Click" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top" Height="41" Width="106"/>
        <TextBox Name="txtBox" HorizontalAlignment="Left" Margin="145,22,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="604" Height="38" FontSize="16"/>
        <MediaElement x:Name="media" Margin="10,10,10,65" LoadedBehavior="Manual" UnloadedBehavior="Stop" MediaOpened="media_Opened" MediaEnded="media_Ended" MediaFailed="media_Failed"/>
        <Slider x:Name="playSlider" Margin="10,0,10,42" VerticalAlignment="Bottom" Thumb.DragStarted="PlaySlider_DragStarted" Thumb.DragCompleted="PlaySlider_DragCompleted" ValueChanged="PlaySlider_ValueChanged"/>
        <Button x:Name="btnStart" Content="Play" HorizontalAlignment="Left" Margin="306,0,0,12" Width="40" Height="23" VerticalAlignment="Bottom" Click="BtnStart_Click" Background="#FFFFF8F8"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="396,0,0,12" Width="39" Height="23" VerticalAlignment="Bottom" Click="BtnStop_Click" Background="#FFFFF8F8"/>
        <Button x:Name="btnPause" Content="Pause" HorizontalAlignment="Left" Margin="351,0,0,12" Width="40" Height="23" VerticalAlignment="Bottom" Click="BtnPause_Click" Background="#FFFFF8F8"/>
        <Button x:Name="btnOpenFile" Content="Open" Margin="0,0,10,7" HorizontalAlignment="Right" Width="56" Height="24" VerticalAlignment="Bottom" Click="BtnSelectFile_Click" Background="White"/>
        <Label Content="소리" HorizontalAlignment="Left" Margin="529,0,0,5" Height="26" VerticalAlignment="Bottom"/>
        <Slider x:Name="volumeSlider" HorizontalAlignment="Left" Margin="568,0,0,10" Width="100" Height="18" VerticalAlignment="Bottom" Thumb.DragStarted="VolumeSlider_DragStarted" Thumb.DragCompleted="VolumeSlider_DragCompleted" Maximum="1" LargeChange="0.1" Value="0.5" />
        <Label x:Name="lblPlayTime" Content="00:00:00 / 00:00:00" HorizontalAlignment="Left" Margin="10,0,0,14" VerticalAlignment="Bottom" Width="212" Height="23"/>

    </Grid>
</Window>
