<Window x:Class="_1107_WPF.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1107_WPF"
        xmlns:local1="clr-namespace:Example.Window1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Window.Resources>
        <local1:People x:Key="people">
            <local1:Person Name = "일지매" Phone = "010-8888-1234" Age="20" Male = "True" />
            <local1:Person Name = "임꺽정" Phone = "010-9999-1234" Age="30" Male = "True" />

        </local1:People>
        <local1:MaleToFemaleConverter x:Key="maleConverter"/>
        <local1:MaleToStringConverter x:Key="malestringConverter"/>
        <DataTemplate DataType="{x:Type local1:Person}">
            <TextBlock>
                        이름:
                        <TextBlock Text ="{Binding  Path=Name}"/>
                        전화번호:
                        <TextBlock Text ="{Binding  Path=Phone}"/>
                        나이:
                        <TextBlock Text ="{Binding  Path=Age}"/>
                        성별:
                        <RadioButton IsChecked ="{Binding  Path=Male}"/>
                        <RadioButton IsChecked ="{Binding  Path=Male,Converter= {StaticResource maleConverter}}"/>
                        성별 표시 
                        <TextBlock Text ="{Binding  Path=Male, Converter={StaticResource malestringConverter}}"/>
                        
                        
                        
                </TextBlock>
        </DataTemplate>
    </Window.Resources>
    <StackPanel Name="panel" DataContext="{StaticResource people}" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Margin="5" Orientation="Horizontal">
                <Label >이름(_N):</Label>
                <TextBox x:Name="name" Text="{Binding Path=Name , NotifyOnValidationError=True}" Validation.Error="name_ValidationError"  Foreground="Aqua" Width="120"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="5" Orientation="Horizontal">
                <Label >전화(_P):</Label>
                <TextBox Name="phone1" Text="{Binding Path=Phone}" Width="120" Background="DarkSalmon"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Margin="5" Orientation="Horizontal">
                <Label >나이(_A):</Label>
                <TextBox Name="age" Width="120">
                    <TextBox.Text>
                        <Binding Path="Age" NotifyOnValidationError="True">
                            <Binding.ValidationRules>
                                <!--<ExceptionValidationRule />-->
                                <local1:ShortNumberValidationRule Min="0" Max="100"/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>                </TextBox>
            </StackPanel>
            <StackPanel Grid.Column="3" Margin="5" Orientation="Horizontal" Background="LightGreen">
                <RadioButton IsChecked="{Binding Path=Male}" Content="남" Margin="5,5,20,5" />
                <RadioButton IsChecked="{Binding Path=Male, Converter={StaticResource maleConverter}}" Content="여" Margin="5"/>
            </StackPanel>
        </Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label Height="25" Content="{Binding Path=Name}" Background="{Binding Path=Foreground, ElementName=name}" />
            </Border>
            <Border Grid.Column="1" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label Height="25" Content="{Binding Path=Phone}" Foreground="{Binding Path=Background, ElementName=phone}"/>
            </Border>
            <Border Grid.Column="2" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label Height="25" Content="{Binding Path=Age}"/>
            </Border>
            <Border Grid.Column="3" Margin="2" BorderBrush="Black" BorderThickness="2">
                <Label Height="25" Content="{Binding Path=Male, Converter={StaticResource malestringConverter}}"/>
            </Border>
        </Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="157*"/>
                <ColumnDefinition Width="206*"/>
                <ColumnDefinition Width="437*"/>

            </Grid.ColumnDefinitions>


            <Button Name="prev" Margin="93,3,119,3" Height="30" Content="prev" Click="prev_Click" Grid.ColumnSpan="2" />
            <Button Name="next" Margin="22,6,264,0" Height="30" Content="nex" Click="next_Click" Grid.ColumnSpan="1" Grid.Column="2" />
        </Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="157*"/>
                <ColumnDefinition Width="643*"/>

            </Grid.ColumnDefinitions>


            <Button Name="eraseButton" Margin="3,3,3,3" Height="30" Content="Clear" Click="eraseButton_Click_1" Grid.ColumnSpan="1" />
            <Button Name="deletebutton" Margin="47,3,445,3" Height="30" Content="delete" Click="deletebutton_Click" Grid.Column="1" />
            <Button Name="sortbutton" Margin="302,6,190,0" Height="30" Content="sort" Click="sortbutton_Click"   Grid.Column="1" />
            <Button Name="filter" Margin="492,9,10,-3" Height="30" Content="fillteer" Click="filter_Click"   Grid.Column="1" />


        </Grid>
 
        <ListBox Name="mylistbox" ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True">

        </ListBox>
        <!--이걸통해 위에 paenl 에서 datacontext = peoole 한걸통해서 바인딩함 -->

    </StackPanel>
</Window>
